@model EventManager3.Models.Events
@{
    ViewData["Title"] = "Create an Event:";
}
@inject UserManager<ApplicationUser> UserManager
<h3>Create Event:</h3>
<form asp-action="Create" method="post">
    <div>
        <div>Event Name <p><input type="date" name="Name" class="btn-lg" asp-for="Name" value=""></p></div>
        <span asp-validation-for="Name"></span>
        <input type="hidden" asp-for="ArtistName" value=@UserManager.GetUserName(User)>
        <div>Date and Time<p><input type="datetime" name="Date" class="btn-lg" asp-for="Date" value="" ></p></div>
        <span asp-validation-for="Date"></span>
        <div>Location <p><input type="text" name="Location" class="btn-lg" asp-for="Location" value="" ></p></div>
        <span asp-validation-for="Location"></span>
        <div>Genre <p><input type="text" asp-for="Genre" value="" /></p></div>
        <span asp-validation-for="Genre"></span>
    </div>

    <button>Add event</button>


</form>

<form asp-controller="Home" asp-action="Index" method="get">
    <button>Go back</button>
</form>